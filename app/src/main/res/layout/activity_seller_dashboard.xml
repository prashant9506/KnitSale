<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerDashboard">

    <include layout="@layout/custom_toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@color/colorSkyBlue"
        android:scrollIndicators="bottom"
        android:layout_marginBottom="80dp"
        android:layout_below="@+id/customToolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProfileUpdateActivity"
                android:layout_width="190dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                app:cardElevation="1dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:background="@drawable/profile_edit"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Update"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:textSize="20sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardVIewProfileShowActivity"
                android:layout_width="190dp"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                app:cardElevation="3dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:background="@drawable/profile_show"
                    android:backgroundTint="#91C3CC"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Show"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:textSize="20sp"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProductUploadActivity"
                android:layout_width="190dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                app:cardElevation="1dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:background="@drawable/prodo_upload"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Upload"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:textSize="20sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProductListActivity"
                android:layout_width="190dp"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                app:cardElevation="2dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/product_show" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:text="Product List"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>

    </ScrollView>

    <!-- Footer Layout-->
    <include layout="@layout/footer"></include>

</RelativeLayout>