<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerProfileUpdate">

    <include layout="@layout/custom_toolbar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@color/colorSkyBlue"
        android:scrollIndicators="bottom"
        android:scrollbarSize="5sp"
        android:layout_marginBottom="75dp"
        android:layout_below="@+id/customToolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/subform_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Profile Update"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:paddingRight="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ring_frame"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imgViewSellerProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/seller_profile"/>
            </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Details"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:paddingLeft="5dp"
                android:background="@drawable/subform_layout" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputSellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:errorTextColor="@color/colorAccent"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="enter name"
                android:drawableLeft="@drawable/seller_name"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:lines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputSellerMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:counterOverflowTextColor="@color/colorAccent"
            android:layout_gravity="center"
            app:errorTextColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="enter mobile no"
                android:inputType="phone"
                android:drawableLeft="@drawable/seller_phone"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputSellerAlternativeMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:counterOverflowTextColor="@color/colorAccent"
            android:layout_gravity="center"
            app:errorTextColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="enter alternative mobile no (opt.)"
                android:inputType="phone"
                android:drawableLeft="@drawable/seller_phone"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Knit Details"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:paddingLeft="5dp"
                android:background="@drawable/subform_layout" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputSellerBranchYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:layout_gravity="center"
            app:errorTextColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="enter branch and year"
                android:drawableLeft="@drawable/seller_branch_year"
                android:drawableTint="@color/colorSkyBlue"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:lines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputSellerHostelRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:layout_gravity="center"
            app:errorTextColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="enter Hostel and room no"
                android:drawableLeft="@drawable/seller_hostel_room"
                android:drawableTint="@color/colorSkyBlue"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSellerProfileUpdate"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:text="Profile Update"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        
    </LinearLayout>

    </ScrollView>

    <!-- Footer Layout-->
    <include layout="@layout/footer"></include>


</RelativeLayout>