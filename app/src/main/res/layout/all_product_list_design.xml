<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/all_product_pic_layout">

        <ImageView
            android:id="@+id/imgViewAllProductListImage"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/product_pic"/>

        <TextView
            android:id="@+id/txtViewAllProductListPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 7000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtViewAllProductListTitle"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Vivo Mobile v23 Electri"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>