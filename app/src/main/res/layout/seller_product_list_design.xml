<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp"
    app:cardElevation="10dp"
    android:id="@+id/cardViewSellerProductList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/colorSkyBlue">

        <TextView
            android:id="@+id/txtViewSellerProductListTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Electric Machine indection"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txtViewSellerProductListPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 20000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imgViewSellerProductListDesign1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@drawable/product_pic"
            android:layout_marginLeft="50dp"
            android:src="@drawable/product_pic_layout"/>

        <ImageView
            android:id="@+id/imgViewSellerProductListDesign2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/product_pic"
            android:src="@drawable/product_pic_layout"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imgViewSellerProductListDesign3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/product_pic"
            android:src="@drawable/product_pic_layout"/>

        <ImageView
            android:id="@+id/imgViewSellerProductListDesign4"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/product_pic"
            android:src="@drawable/product_pic_layout"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtViewSellerProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

</androidx.cardview.widget.CardView>